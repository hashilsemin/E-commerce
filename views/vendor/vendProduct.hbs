<!-- Static Table Start -->
<div class="data-table-area mg-b-15">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="sparkline13-list shadow-reset">
          <div class="sparkline13-hd">
            <div class="main-sparkline13-hd">
              <h1>Products <span class="table-project-n"></span> </h1>
              <div class="sparkline13-outline-icon">
                <a href="/vendor/addProduct"><button class="btn-primary">Add a Product</button></a>
                
              </div>
            </div>
          </div>
          <div class="sparkline13-graph">
            <div class="datatable-dashv1-list custom-datatable-overright">
              <div id="toolbar">
                <select class="form-control">
                  <option value="">Export Basic</option>
                  <option value="all">Export All</option>
                  <option value="selected">Export Selected</option>
                </select>
              </div>
              <table id="table" data-toggle="table" data-pagination="true" data-search="true" data-show-columns="true"
                data-show-pagination-switch="true" data-show-refresh="true" data-key-events="true"
                data-show-toggle="true" data-resizable="true" data-cookie="true" data-cookie-id-table="saveId"
                data-show-export="true" data-click-to-select="true" data-toolbar="#toolbar">
                <thead>
                  <tr>
                    <th data-field="state" data-checkbox="true"></th>

                    <th data-field="name" data-editable="true">product</th>
                    <th data-field="email" data-editable="true">category</th>
                    <th data-field="phone" data-editable="true">Description</th>
                    <th data-field="company" data-editable="true">Price</th>
                    <th data-field="status" data-editable="true">Status</th>
                    <th data-field="discount" data-editable="true">discount Price</th>

                    
                    {{!-- <th data-field="company" data-editable="true">Status</th> --}}

                    <th data-field="action">Action</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each product}}
                  <tr>
                    <td></td>

                    <td>{{this.product}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    {{#if this.actual}}
                    <td>{{this.actual}}</td>
                    {{else}}
                    <td>{{this.price}}</td>
                    {{/if}}
                    {{#if this.block}}
                    <td>blocked</td>
                    {{else}}
                    <td>allowed</td>
                    {{/if}}
{{#if this.actual}}
                    <td>{{this.price}}</td>
                    {{else}}
                    <td>No discount</td>
                    {{/if}}
                    {{!-- <td>{{this.block}}</td> --}}
                    <td class="datatable-ct">

                      {{!-- offer --}}




                      {{#if this.actual}}
                      <a href="/vendor/deleteOffer/{{this._id}}" class="btn btn-danger"
                        onclick="return confirm('Delete offer for {{this.product}} ? ')">Remove discount</a>
                      {{else}}
                      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#{{this._id}}exampleModal2"
                        data-whatever="@getbootstrap">Make a discount</button>
                      <div class="modal fade" id="{{this._id}}exampleModal2" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">Make the Offer for {{this.product}}
                              </h5>
                              <h5 style="color: rgb(0, 0, 0); font-weight: bolder;" id="exampleModalLabel">Current Price
                                : {{this.price}} â‚¹

                              </h5>
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div>
                            <div class="modal-body">
                              <form action="/vendor/makeOffer" method="post">
                                <input type="text" name="productId"  value="{{this._id}}" hidden>
                                <input type="text" name="price"  value="{{this.price}}" hidden>

                                <div class="form-group">
                                  How much Percentage?<div style="margin-left: 43%;">
                                    <input oninput="percentage('{{this.price}}','{{this._id}}')" id="{{this._id}}"
                                      type="text" pattern="\d*" maxlength="2" style="width:25%" class="form-control"
                                      name="offer" required>
                                  </div>

                                  New price = <span id="{{this._id}}2"></span>
                                  {{!-- <input type="text" class="form-control" name="userId"
                                    value="{{this._id.userId}}" hidden>
                                  <input type="text" class="form-control" name="userEmail" value="{{this._id.email}}"
                                    hidden> --}}
                                </div>
                                <div class="form-group">


                                </div>
                                <button type="submit" class="btn btn-primary">Confirm</button>
                              </form>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                            </div>
                          </div>
                        </div>
                      </div>
                     
                      {{/if}}
                      {{!-- end offer --}}


                      <a href="/vendor/editProduct/{{this._id}}" class="btn btn-primary">Edit</a>
                      <a href="/vendor/deleteProduct/{{this._id}}" class="btn btn-danger"
                        onclick="return confirm('Are you sure you want to delete {{this.product}} ? ')">Delete</a>





                      {{#if this.block}}
                      <a href="/vendor/unblock/{{this._id}}" class="btn btn-warning"
                        onclick="return confirm('Are you sure you want to unblock {{this.product}} ? ')">Unblock</a>
                      {{else}}
                      <a href="/vendor/blockVendor/{{this._id}}" class="btn btn-warning"
                        onclick="return confirm('Are you sure you want to block {{this.product  }} ? ')">Block &nbsp
                        &nbsp</a>
                      {{/if}}
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

 <script>
                        function percentage(price, proId) {
                          console.log(price)
                          let percent = document.getElementById(proId).value
                          console.log(proId)
                          document.getElementById(proId+'2').innerHTML = price - (price * percent / 100)
                        }
                      </script>
