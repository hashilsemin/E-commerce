<div class="row">
    <div class="col-lg-12">
        <div class="sparkline12-list shadow-reset mg-t-30">
            <div class="sparkline12-hd">
                <div class="main-sparkline12-hd">
                    <h1>All Form Element</h1>
                    <div class="sparkline12-outline-icon">
                        <span class="sparkline12-collapse-link"><i class="fa fa-chevron-up"></i></span>
                        <span><i class="fa fa-wrench"></i></span>
                        <span class="sparkline12-collapse-close"><i class="fa fa-times"></i></span>
                    </div>
                </div>
            </div>
            <div class="sparkline12-graph">
                <div class="basic-login-form-ad">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="all-form-element-inner">
                                <form action="/vendor/edit-product" id="editproduct" method="POST"
                                    enctype="multipart/form-data">
                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">Name</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <input type="text" name="product" class="form-control"
                                                    value="{{product.product}}" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-3">

                                        </div>
                                        <div class="col-lg-9">

                                            <input type="text" name="vendorId" value="{{vendorId}}" hidden />
                                            <input type="text" name="productId" value="{{id}}" hidden />

                                        </div>
                                    </div>


                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">Category</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <div class="form-select-list">
                                                    <select class="form-control custom-select-value" name="category">
                                                        {{#each category}}
                                                        <option>{{this.category}}</option>
                                                        {{/each}}

                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">Description</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <input type="text" name="description" class="form-control"
                                                    value="{{product.description}}" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">Price</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <input type="text" name="price"  class="form-control"
                                                    value="{{product.price}}" />
                                            </div>
                                        </div>
                                    </div>
                                    {{!-- photo --}}
                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">Front Image</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <input type="file" name="Image1" accept="image/*"  class="form-control"
                                                    onchange="viewImage1(event)">

                                                <img src="/product-images/{{product._id}}first.jpg" alt="" style="width:100px;height:auto"  id="imgView1">

                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">Secondary Image</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <input type="file" name="Image2" accept="image/*" class="form-control"
                                                    onchange="viewImage2(event)">

                                                <img src="/product-images/{{product._id}}second.jpg" alt=""
                                                    style="width:100px;height:auto" accept="image/*" id="imgView2">

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">Additional Image</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <input type="file" name="Image3" accept="image/*" class="form-control"
                                                    onchange="viewImage3(event)">

                                                <img src="/product-images/{{product._id}}three.jpg" alt=""
                                                    style="width:100px;height:auto" id="imgView3">

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">Advertisement</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <input type="file" name="Image4" accept="image/*" class="form-control"
                                                    onchange="viewImage4(event)">

                                                <img src="/product-images/{{product._id}}ad.jpg" alt=""
                                                    style="width:100px;height:auto" accept="image/*" id="imgView4">

                                            </div>
                                        </div>
                                    </div>

                                    {{!-- photo end --}}



                                    <div class="form-group-inner">
                                        <div class="login-btn-inner">
                                            <div class="row">
                                                <div class="col-lg-3"></div>
                                                <div class="col-lg-9">
                                                    <div class="login-horizental cancel-wp pull-left">
                                                        <button class="btn btn-white" type="submit">Cancel</button>
                                                        <button class="btn btn-sm btn-primary login-submit-cs"
                                                            type="submit">Edit product</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>


<script>
    function viewImage1(event) {
        document.getElementById('imgView1').src = URL.createObjectURL(event.target.files[0])
    }
     function viewImage2(event) {
        document.getElementById('imgView2').src = URL.createObjectURL(event.target.files[0])
    }
     function viewImage3(event) {
        document.getElementById('imgView3').src = URL.createObjectURL(event.target.files[0])
    }
     function viewImage4(event) {
        document.getElementById('imgView4').src = URL.createObjectURL(event.target.files[0])
    }
</script>

