                                            <div class="col-lg-12">
                                                <div class="all-form-element-inner">
                                                    <form action="/vendor/edit-product" id="editproduct" method="POST" enctype="multipart/form-data">
                                                        <div class="form-group-inner">
                                                            <div class="row">
                                                                <div class="col-lg-3">
                                                                    <label class="login2 pull-right pull-right-pro">Name</label>
                                                                </div>
                                                                <div class="col-lg-9">
                                                                    <input type="text"  name="product" class="form-control" value="{{product.product}}"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group-inner">
                                                            <div class="row">
                                                                <div class="col-lg-3">
                                                                    <label class="login2 pull-right pull-right-pro">Category</label>
                                                                </div>
                                                                <div class="col-lg-9">
                                                                    <input type="text" name="category"  class="form-control" value="{{product.category}}"/>
                                                                     <input type="text" name="vendorId" value="{{vendorId}}"  hidden/>
                                                                      <input type="text" name="productId" value="{{id}}"  hidden/>
                                                                     
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group-inner">
                                                            <div class="row">
                                                                <div class="col-lg-3">
                                                                    <label class="login2 pull-right pull-right-pro">Description</label>
                                                                </div>
                                                                <div class="col-lg-9">
                                                                    <input type="text" name="description" class="form-control" value="{{product.description}}"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group-inner">
                                                            <div class="row">
                                                                <div class="col-lg-3">
                                                                    <label class="login2 pull-right pull-right-pro">Price</label>
                                                                </div>
                                                                <div class="col-lg-9">
                                                                    <input type="text" name="price"  class="form-control" value="{{product.price}}"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    {{!-- photo --}}
                                                    <div class="form-group-inner">
                                                            <div class="row">
                                                                <div class="col-lg-3">
                                                                    <label class="login2 pull-right pull-right-pro">Thumbnail</label>
                                                                </div>
                                                                <div class="col-lg-9">
                                                                                   <input type="file" name="Image" class="form-control" onchange="viewImage(event)" > 
                                                                                  
                                                      <img src="/product-images/{{product._id}}.jpg" alt="" style="width:100px;height:auto" id="imgView">
                
                                                                </div>
                                                            </div>
                                                        </div>
                                    
         
                                                    {{!-- photo end --}}
                                                     
                                                       
                                                   
                                                        <div class="form-group-inner">
                                                            <div class="login-btn-inner">
                                                                <div class="row">
                                                                    <div class="col-lg-3"></div>
                                                                    <div class="col-lg-9">
                                                                        <div class="login-horizental cancel-wp pull-left">
                                                                            <button class="btn btn-white" type="submit">Cancel</button>
                                                                            <button class="btn btn-sm btn-primary login-submit-cs" type="submit">Edit product</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
